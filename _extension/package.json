{
  "name": "ts-refactor-tools",
  "displayName": "TypeScript refactor tools",
  "publisher": "unsplash",
  "description": "Useful refactor tools for Unsplash web codebase",
  "version": "0.3.0",
  "files": [
    "dist/*"
  ],
  "engines": {
    "vscode": "^1.56.0"
  },
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "typescriptServerPlugins": [
      {
        "name": "@unsplash/ts-refactor-tools",
        "enableForWorkspaceTypeScriptVersions": true
      }
    ],
    "configuration": {
      "title": "UnsplashImportNamespaceCodeAction",
      "properties": {
        "unsplash.codeActions.namespaceImports": {
          "type": "object",
          "description": "Configure how namespaces should be discovered",
          "patternProperties": {
            "^.*$": {
              "type": "object",
              "required": [
                "importPath"
              ],
              "properties": {
                "importPath": {
                  "type": "string",
                  "description": "Where to find the module"
                }
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "watch": "webpack --watch",
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --mode production --devtool hidden-source-map",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/node": "14.x",
    "@types/vscode": "^1.56.0",
    "ts-loader": "^9.2.2",
    "typescript": "^4.3.2",
    "vsce": "^2.5.1",
    "vscode": "^1.1.37",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  },
  "dependencies": {
    "@unsplash/ts-refactor-tools": "0.2.2-1"
  },
  "extensionDependencies": [
    "vscode.typescript"
  ]
}
